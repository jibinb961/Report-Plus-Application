<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_margin="10dp"
           android:elevation="10dp"
           android:id="@+id/setting_top_linear_layout"
           android:background="@drawable/ellipse_border"
           android:layout_height="wrap_content">

           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="90dp"
               android:layout_height="90dp"
               android:layout_margin="20dp"
               android:src="@drawable/teacher"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_gravity="center"
               android:gravity="start"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="10dp"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/settings_class_teacher_name"
                   android:layout_width="wrap_content"
                   android:textSize="16sp"
                   android:fontFamily="@font/poppins"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:layout_height="wrap_content"
                   android:text="Class Teacher : "/>
               <TextView
                   android:id="@+id/settings_class_strength"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="16sp"
                   android:fontFamily="@font/poppins"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:text="Class Strength : "/>

           </LinearLayout>
       </LinearLayout>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Settings"
           android:id="@+id/setting_text_heading"
           android:textSize="18sp"
           android:layout_marginLeft="10dp"
           android:layout_below="@id/setting_top_linear_layout"
           android:fontFamily="@font/poppins"
           android:textStyle="bold"
           android:textColor="@color/black"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp"
           android:orientation="vertical"
           android:layout_below="@+id/setting_text_heading"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/grading_type_textview"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Grading Type"
               android:padding="10dp"
               android:textSize="16sp"
               android:fontFamily="@font/poppins"
               android:textColor="@color/black"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/Reset_Class_pin_TextView"
               android:text="Reset Class PIN"
               android:layout_marginTop="10dp"
               android:padding="10dp"
               android:textSize="16sp"
               android:fontFamily="@font/poppins"
               android:textColor="@color/black"/>


       </LinearLayout>
   </RelativeLayout>

</FrameLayout>