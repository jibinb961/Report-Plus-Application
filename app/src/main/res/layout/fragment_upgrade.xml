<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".UpgradeFragment">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:id="@+id/premium_image"
            android:layout_centerHorizontal="true"
            android:src="@drawable/upgrade"/>

    <TextView
        android:id="@+id/attendance_upgrade_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/premium_image"
        android:layout_centerInParent="true"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:layout_margin="5dp"
        android:text="Pdf creation limit has reached !"
        android:textAlignment="center"
        android:textColor="@color/colorTertiary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/attendance_upgrade_text_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/attendance_upgrade_text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Upgrade to Premium and enjoy unlimited pdf generations"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/upgrade_premium_linear_layout"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/attendance_upgrade_text_two"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upgrade"
                android:id="@+id/upgrade_premium_button"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/poppins"
                android:background="@drawable/ellipse_border"
                android:textColor="@color/colorSecondary"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cancel_premium_linear_layout"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:elevation="10dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:layout_below="@+id/upgrade_premium_linear_layout"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textColor="#B0EB2F06"
                android:textSize="15sp"
                android:text="Cancel"
                />
        </LinearLayout>

</RelativeLayout>